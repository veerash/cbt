<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20sp">

    <ImageView
        android:id="@+id/alert_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:src="@drawable/alert_icon" />

    <com.android.citybustickets.customviews.textviews.LatoSemiBoldTextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:text="Internet Unavailable"
        android:textColor="#000000"
        android:textSize="16sp" />

    <com.android.citybustickets.customviews.textviews.Lato_Reg_TextView
        android:id="@+id/desc_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:text="We are unable to reach our server"
        android:textColor="@color/wp_dark_gray"
        android:textSize="14sp" />

    <com.android.citybustickets.customviews.buttons.LatoRegButton
        android:id="@+id/open_settings_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20sp"
        android:gravity="center"
        android:padding="10sp"
        android:background="@drawable/open_settings_bg"
        android:textColor="@android:color/white"
        android:text="Open Settings"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>